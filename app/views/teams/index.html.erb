<div class="jumbotron">

  <% if notice %>
    <div class="alert alert-success alert-dismissible pull-right" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
    </div>
  <% end %>

  <h1 class="primary">Hackaton!</h1>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Valor</th>
        <th>Integrantes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td class="bg-<%= team.tipo.cor %>"> </td>
          <td><%= team.name %></td>
          <td><%= team.description %></td>
          <td><%= team.tipo.nome %></td>
          <td><%= team.integrantes.count %></td>
          <td><%= link_to 'Visualizar', team %></td>
          <td><%= link_to 'Editar', edit_team_path(team) %></td>
          <td><%= link_to 'Excluir', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Cadastrar Nova Equipe', new_team_path, :class => "btn btn-primary pull-right" %>
