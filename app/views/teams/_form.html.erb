<% if @team.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@team.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% @team.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @team do |f| %>
<div class="row">
  <div class="col-md-7">
    <div class="jumbotron">
      <div class="row">
          <div class="field form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :required => true,
            :class=>"form-control", :placeholder=>"Nome"%>
          </div>
      </div>
      <div class="row">
          <div class="field form-group">
            <%= f.label :description %><br>
            <%= f.text_area :description,
            :class=>"form-control", :placeholder=>"Descrição" %>
          </div>
      </div>
      <div class="row">
          <div class="field form-group">
            <%= f.label :tipo %><br>
            <%= f.collection_select :tipo_id, Tipo.all, :id, :nome, include_blank: false %>
          </div>
      </div>
    </div>
  </div>
</div>

<h3 class="text-primary">Integrantes:</h3>
  <div id="integrantes">
    <%= f.fields_for :integrantes do |i| %>
    <%= render 'integrante_fields', :f => i %>
    <%= link_to_add_association "add integrante",
      f, :integrantes,
      :class => "btn btn-primary pull-left btn-add-integrantes" %>
    <% end %>
  </div>
  <%= show_simple_captcha %>
  <%= f.submit 'Atualizar Equipe', :class=> "btn btn-success"%>
<% end %>
