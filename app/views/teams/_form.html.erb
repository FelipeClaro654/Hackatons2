<% if @team.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@team.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @team do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :required => true%>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :tipo %><br>
    <%= f.collection_select :tipo_id, Tipo.all, :id, :nome, include_blank: false %>
  </div>

<div id="integrantes">
  <%= f.fields_for :integrantes do |i| %>
    <%= render 'integrante_fields', :f => i %>
    <%= link_to_add_association "add integrante", f, :integrantes %>
  <% end %>
</div>
<%= show_simple_captcha %>
  <%= f.submit 'Atualizar Equipe', :class=> "btn btn-success"%>
<% end %>
